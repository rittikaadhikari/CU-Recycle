<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".Search_Page"
    tools:showIn="@layout/app_bar_search__page"
    android:orientation="vertical">


    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginEnd="0dp"
        android:baselineAligned="false"
        android:orientation="horizontal"
        android:layout_marginTop="50dp"
        android:weightSum="1.0">

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_weight=".5"
            android:orientation="vertical"
            android:weightSum="1.0">

            <ImageButton
                android:id="@+id/imageButtonBin"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/blue_bin"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Recycling Procedure"
                android:layout_marginTop="5dp"/>

            <ImageButton
                android:id="@+id/imageButtonCan"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/cans"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Beverage Containers"
                android:layout_marginTop="5dp"/>

            <ImageButton
                android:id="@+id/imageButtonMail"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/usps"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Residential Paper"
                android:layout_marginTop="5dp"/>

        </LinearLayout>

        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="15dp"
            android:layout_marginEnd="15dp"
            android:layout_weight=".5"
            android:orientation="vertical"
            android:weightSum="1.0">

            <ImageButton
                android:id="@+id/imageButtonBag"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/plastic_bag"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Unacceptable Materials"
                android:layout_marginTop="5dp"/>

            <ImageButton
                android:id="@+id/imageButtonPaint"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/paint"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Food Containers"
                android:layout_marginTop="5dp"/>

            <ImageButton
                android:id="@+id/imageButtonMilk"
                android:layout_width="match_parent"
                android:layout_height="120dp"
                android:background="@drawable/milk_jug"
                android:layout_marginTop="15dp"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="50dp"
                android:text="Plastic Resin Codes"
                android:layout_marginTop="5dp"/>

        </LinearLayout>
    </LinearLayout>


</LinearLayout>